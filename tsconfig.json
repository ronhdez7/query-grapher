{
  "compilerOptions": {
    "target": "ES2022",
    "moduleResolution": "Node10",
    "module": "CommonJS",
    "outDir": "dist",
    "noEmit": true,
    "esModuleInterop": true,
    "declaration": true,
    "skipLibCheck": true,

    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUncheckedIndexedAccess": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
